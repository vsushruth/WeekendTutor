<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditProfile"
    android:background="@drawable/gradientbackground"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/pagename"
            android:textColor="#ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Edit Profile"
            android:textSize="30dp"
            />
        <TextView
            android:id="@+id/nameview"
            android:textColor="#ffff"
            android:layout_below="@id/pagename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:text="Name"/>
        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint=""
            android:layout_below="@id/nameview"
            android:textColor="#ffff"
            />
        <TextView
            android:id="@+id/emailview"
            android:textColor="#ffff"
            android:layout_below="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:text="Email"/>
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint=""
            android:layout_below="@id/emailview"
            android:textColor="#ffff"/>
        <!--TextView
            android:id="@+id/passview"
            android:layout_below="@id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Password"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_below="@id/passview"
            android:hint=""/>
        <TextView
            android:id="@+id/cpassview"
            android:layout_below="@id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Confirm Password"/>
        <EditText
            android:id="@+id/confirmpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_below="@id/cpassview"
            android:hint=""/-->
        <ImageButton
            android:id="@+id/dp"
            android:layout_marginRight="10dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/addprofilepic"
            android:layout_alignRight="@id/name"
            android:layout_alignParentRight="true"
            android:layout_below="@id/pagename"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/qfview"
            android:textColor="#ffff"
            android:layout_below="@id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:text="Qualification"/>
        <EditText
            android:id="@+id/qualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint=""
            android:layout_below="@id/qfview"
            android:textColor="#ffff"/>
        <TextView
            android:id="@+id/cityview"
            android:textColor="#ffff"
            android:layout_below="@id/qualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:text="City (where you are available as a tutor)"/>
        <EditText
            android:id="@+id/city"
            android:layout_below="@id/cityview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint=""
            android:textColor="#ffff"/>

        <Button
            android:id="@+id/save"
            android:textColor="#ffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/city"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="4dp"
            android:layout_alignParentBottom="true"
            android:text="Save Changes"
            android:background="@drawable/button_border"/>
        <!--Button
            android:id="@+id/backbut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/save"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="4dp"
            android:background="@color/colorAccent"
            android:text="Back" /-->
        <!--ImageView
            android:id="@+id/quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/quote"
            android:layout_below="@id/registerbutton"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="centerCrop"/-->

    </RelativeLayout>
</ScrollView>