<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditProfile"
    android:background="@drawable/book"
    >

    <TextView
        android:id="@+id/pagename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Edit Profile"
        android:textColor="#fff"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nameview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pagename"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:text="Name"
        android:textColor="#fff"
        android:textSize="22dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editSname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameview"
        android:ems="10"
        android:hint=""
        android:textStyle="bold" />

    <TextView
        android:id="@+id/emailview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editSname"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:text="Email"
        android:textColor="#fff"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/editSemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailview"
        android:ems="10"
        android:hint=""
        android:inputType="textEmailAddress"
        android:padding="2dp"
        android:text="abc@example.com"
        android:textSize="18sp"
        android:textStyle="bold" />
    <ImageButton
        android:id="@+id/dp"
        android:layout_marginRight="10dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/addprofilepic"
        android:layout_alignRight="@id/editSname"
        android:layout_alignParentRight="true"
        android:layout_below="@id/pagename"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/qfview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editSemail"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:text="Qualification"
        android:textColor="#fff"
        android:textSize="22dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editSqualification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qfview"
        android:ems="10"
        android:hint=""
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cityview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editSqualification"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:text="City (where you are available as a student)"
        android:textColor="#fff"
        android:textSize="22dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editScity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cityview"
        android:ems="10"
        android:hint=""
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/buttonstyle"
        android:text="Save Changes" />


</RelativeLayout>